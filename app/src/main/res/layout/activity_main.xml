<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.MainActivity"
    android:id="@+id/coordinator_layout"
    >
    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/drawer_layout"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_frame">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >
                <ImageButton
                    android:id="@+id/ic_btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_gps_location"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:stateListAnimator="@animator/animatorbtnimg"

                    />
                <ImageButton
                    android:id="@+id/ic_btn_directions"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_directions"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:stateListAnimator="@animator/animatorbtnimg"
                    android:layout_below="@+id/ic_btn_location"
                    />

                <include layout="@layout/info_route"
                    android:layout_height="900px"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/ic_btn_directions"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/icon_addDirect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_gravity="center"
                />

            <!--trai-->

            <ImageButton
                android:id="@+id/ibt_others"
                android:background="@drawable/icon_cancel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stateListAnimator="@animator/animatorbtnimg"
                />

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                >
                <ImageButton
                    android:id="@+id/ic_btn_search"
                    android:background="@drawable/icon_search"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stateListAnimator="@animator/animatorbtnimg"
                    />
                <ImageButton
                    android:id="@+id/ic_btn_layers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/icon_layers"
                    android:stateListAnimator="@animator/animatorbtnimg"
                    />
            </GridLayout>

        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_view"/>


    </androidx.drawerlayout.widget.DrawerLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>




